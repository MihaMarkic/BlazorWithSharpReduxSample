@inject IReduxDispatcher Dispatcher

<h1>Counter</h1>

<p>Current count: @State.Value</p>

<button onclick="@IncrementCount">Click me</button>

@functions {
    public CounterState State { get; set; }

    void IncrementCount()
    {
        Dispatcher.Dispatch(new IncrementCounterAction());
    }
}
